<Window x:Class="TestApp.Views.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TestApp" Height="600" Width="1000" WindowStartupLocation="CenterScreen" MinHeight="600" MinWidth="800">
    <Grid>
        <StackPanel x:Name="Grid_List" HorizontalAlignment="Left"  Margin="0,25,0,0" Width="200" Background="#FFF0F0F0" >
            <Label Content="小工具"/>
            <Button x:Name="Button_RSA" Content="RSA加密算法小工具" Margin="10,0,10,10" Click="Button_RSA_Click"/>
            <Button x:Name="Button_AES" Content="AES加密算法小工具" Margin="10,0,10,10" Click="Button_AES_Click"/>
            <Label Content="功能学习"/>
            <Button x:Name="Button_DataGridDragDrop" Content="DataGridDragDrop" Margin="10,0,10,10" Click="Button_DataGridDragDrop_Click"/>
        </StackPanel>
        <Frame x:Name="Frame_Content" Content="" Margin="200,25,0,0" NavigationUIVisibility="Hidden"/>
        <Menu Height="25" Margin="0" VerticalContentAlignment="Center" VerticalAlignment="Top">
            <MenuItem Header="File" VerticalContentAlignment="Center" Height="25">
                <MenuItem x:Name="MenuItem_File_Exit" Header="Exit" Click="MenuItem_File_Exit_Click"/>
            </MenuItem>
            <MenuItem Header="Help">
                <MenuItem x:Name="MenuItem_About" Header="About" Click="MenuItem_About_Click"/>
            </MenuItem>
        </Menu>

    </Grid>
</Window>
